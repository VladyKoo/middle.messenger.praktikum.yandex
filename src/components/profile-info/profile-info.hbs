<div class='{{styles.box}}'>
  <div class='{{styles.avatar-box}}'>
    <div class='{{styles.avatar}}'>
      {{{avatarImg}}}
    </div>
    <div class='{{styles.avatar-info-fullname}}'>{{first_name}} {{second_name}}</div>
    <div class='{{styles.avatar-info-phone}}'>{{phone}}</div>
  </div>
  <div class='{{styles.info-box}}'>
    <div class='{{styles.info-title}}'>Info</div>
    <div class='{{styles.info-text}}'>
      <span>Login:</span>
      <span>{{login}}</span>
    </div>
    <div class='{{styles.info-text}}'>
      <span>Email:</span>
      <span>{{email}}</span>
    </div>
    <div class='{{styles.info-text}}'>
      <span>Display name:</span>
      <span>{{display_name}}</span>
    </div>
  </div>
</div>